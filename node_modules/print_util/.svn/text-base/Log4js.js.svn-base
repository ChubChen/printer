var log4js = require('log4js');

log4js.configure({
    appenders: [
        { type: 'console' },
        {
            type: 'dateFile',
            filename: '/data/printerLogs/log.out',
            pattern: "_yyyy-MM-dd.log",
            maxLogSize: 10240,
            alwaysIncludePattern: false,
            backups: 4,
            category: 'logger'
        },
        {
            type: 'dateFile',
            filename: '/data/printerLogs/userOpLogs/userOpLog.out',
            pattern: "_yyyy-MM-dd.log",
            maxLogSize: 10240,
            alwaysIncludePattern: true,
            category: 'userOpLogger'
        }
    ],
    replaceConsole: true
});

var logger = log4js.getLogger('logger');
var userOpLogger = log4js.getLogger('userOpLogger');

module.exports = [logger,userOpLogger];